<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.wifiprob.settings">



    <TextView
        android:id="@+id/textView3"
        android:layout_width="360dp"
        android:layout_height="32dp"
        android:text="Choose the system you wish to use: "
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="10pt"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />


    <RadioGroup
        android:layout_width="357dp"
        android:layout_height="110dp"
        android:layout_marginLeft="11dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:id="@+id/radioGroup"
        android:layout_marginStart="11dp">

        <RadioButton
            android:id="@+id/detSystem"
            android:layout_width="149dp"
            android:layout_height="44dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="Deterministic"
            android:textSize="8pt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <RadioButton
            android:id="@+id/probSystem"
            android:layout_width="172dp"
            android:layout_height="44dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="Probabilistic"
            android:textSize="8pt"
            app:layout_constraintLeft_toRightOf="@+id/radioButton"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="System settings:"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        android:layout_marginLeft="16dp"
        android:textSize="8pt"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />


    <RadioGroup
        android:layout_width="206dp"
        android:layout_height="128dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:weightSum="1"
        android:layout_marginStart="16dp"
        android:id="@+id/radioGroup2">

        <RadioButton
            android:id="@+id/knnOrNoPedo"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="204dp" />

        <RadioButton
            android:id="@+id/wknnOrPedo"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="266dp" />
    </RadioGroup>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="332dp"
        android:layout_height="46dp"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2"
        android:layout_marginRight="36dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="268dp"
        android:layout_height="34dp"
        android:text="Environment selection:"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:textSize="8pt"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2" />


</android.support.constraint.ConstraintLayout>
